# Server Configuration
PORT=8080

# Database Configuration
DB_URL=postgres://username:password@localhost:5432/dbname?sslmode=disable

# Example for development
# DB_URL=postgres://user:password@localhost:5432/go_hello_world?sslmode=disable

# Production example (use environment-specific values)
# DB_URL=postgres://user:password@production-host:5432/production_db?sslmode=require

# Server Timeouts (optional - defaults shown)
SERVER_TIMEOUT=30s
READ_TIMEOUT=10s
WRITE_TIMEOUT=15s
IDLE_TIMEOUT=60s

# Database Connection Pool (optional - defaults shown)
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=25
DB_CONN_MAX_LIFETIME=5m

# Environment
ENVIRONMENT=development
